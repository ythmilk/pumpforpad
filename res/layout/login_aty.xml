<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/login_l0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_login_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/ic_close_black_18dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_wufuya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="无负压供水"
                    android:textColor="#339966"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/tv_ankong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/tv_wufuya"
                    android:layout_below="@id/tv_wufuya"
                    android:layout_marginTop="5dp"
                    android:text="安控科技"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/login_view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/login_l0"
        android:layout_marginTop="50dp"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/login_l1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_view1"
        android:layout_marginTop="5dp"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="账号"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/login_et_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edit_bac"
            android:hint="用户名"
            android:textColorHint="#cccccc"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/login_view2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/login_l1"
        android:layout_marginTop="5dp"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/login_l2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_view2"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="密码"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/login_et_login_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edit_bac"
            android:hint="登陆密码"
            android:inputType="textPassword"
            android:textColorHint="#cccccc"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/login_view3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/login_l2"
        android:layout_marginTop="5dp"
        android:background="#cccccc" />
<CheckBox
    android:id="@+id/remember"
    android:layout_below="@id/login_view3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="记住密码" />
    <Button
        android:id="@+id/btn_login_in1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/remember"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_btn_bac"
        android:gravity="center"
        android:padding="10dp"
        android:text="登陆"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/tv_login_forgetpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login_in1"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="忘记密码？"
        android:textColor="#cccccc"
        android:textSize="15sp" />

</RelativeLayout>